# Composition devices
/dev/mali                               u:object_r:gfx_device:s0
/dev/comp0                              u:object_r:gfx_device:s0
/dev/hwmem                              u:object_r:gfx_device:s0
/dev/b2r2_blt                           u:object_r:gfx_device:s0

# Camera
/dev/mmio_camera                        u:object_r:camera_device:s0
/dev/camera_flash                       u:object_r:camera_device:s0

# Bluetooth
/dev/ttyAMA0                            u:object_r:hci_attach_dev:s0
/efs/bluetooth(/.*)?                    u:object_r:bluetooth_data_file:s0

# GPS
/dev/ttyAMA1                            u:object_r:gps_device:s0

# Sensors
/dev/alps_io                            u:object_r:sensors_device:s0
/dev/alps_compass_io                    u:object_r:sensors_device:s0
/dev/i2c-2                              u:object_r:sensors_device:s0

# RFKill device for wpa_supplicant
